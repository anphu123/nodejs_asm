<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="bg-black m-3">
      <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2">
              <a
                class="navbar-brand text-white p-1"
                href="http://localhost:3000/"
                ><H1>HOME</H1></a
              >
              <a
                class="navbar-brand text-white p-1"
                href="http://localhost:3000/list/listsp"
                ><H1>LIST</H1></a
              >
            </ul>
            <!-- <a href="http://localhost:3000/register" class="btn btn-outline-info"
              >REGISTER</a
            > -->
          </div>
        </div>
      </nav>
    </div>
    <div class="p-1">
      <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2">
              <h1>TRANG DANH SÁCH</h1>
            </ul>
            <!-- <a href="http://localhost:3000/register" class="btn btn-outline-info"
              >REGISTER</a
            > -->
          </div>
        </div>
      </nav>
    </div>

    <div class="col">
      <a
        href="http://localhost:3000/list/listsp"
        class="btn btn-outline-primary m-3"
        >DANH SÁCH SẢN PHẨM</a
      >
      <a
        href="http://localhost:3000/list/listuser"
        class="btn btn-outline-primary m-3"
        >DANH SÁCH USER</a
      >
      <a
        href="http://localhost:3000/list/listtl"
        class="btn btn-outline-primary m-3"
        >DANH SÁCH THỂ LOẠI</a
      >
    </div>

    <div class="m-3">
      <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <a
                class="btn btn-outline-primary"
                href="http://localhost:3000/list/addtl"
                >ADD</a
              >
            </ul>
            <form class="d-flex" role="search">
              <input
                class="form-control me-2"
                type="search"
                placeholder="Search"
                aria-label="Search"
              />
              <button class="btn btn-outline-success" type="submit">
                Search
              </button>
            </form>
          </div>
        </div>
      </nav>
    </div>

    <div class="m-3">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>

            <th scope="col">LOẠI SẢN PHẨM</th>

            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% listtl.forEach((row)=>{ %>
          <tr>
            <td><a href="/list/edittl/<%= row._id %>"><%= row._id %></a></td>

            <td><%= row.name %></td>
            <td>
              <a
                class="btn btn-primary"
                onclick="return confirm('delete: <%= row.name %>')"
                href="/list/deletetl/<%= row._id %>"
                >XOÁ</a
              >
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <div class="m-3">
      <nav aria-label="Page navigation example">
        <ul class="pagination">
          <li class="page-item"><a class="page-link" href="#">Previous</a></li>
          <li class="page-item"><a class="page-link" href="#">1</a></li>
          <li class="page-item"><a class="page-link" href="#">2</a></li>
          <li class="page-item"><a class="page-link" href="#">3</a></li>
          <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
      </nav>
    </div>

       
    <div class="row bg-info p-3 m-3">
      <h3 class="text-center">Huỳnh Mai An Phú</h3>
      <h3 class="text-center">PS19353</h3>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
